<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Food Reel Details</title>
  <style>
    body { font-family: Arial, sans-serif; margin:0; padding:0; background:#f5f5f5;}
    .container { max-width:600px; margin:0 auto; padding:16px; }
    h2 { text-align:center; margin-bottom:16px; color:#333; }
    video { width:100%; border-radius:8px; margin-bottom:16px; }
    .details { background:#fff; padding:12px; border-radius:8px; box-shadow:0 1px 4px rgba(0,0,0,0.1); margin-bottom:16px; }
    .details h3 { margin:4px 0 8px 0; font-size:20px; color:#222; }
    .details h4 { margin:0 0 4px 0; font-size:16px; color:#555; }
    .details p { margin:0 0 12px 0; font-size:14px; color:#555; }
    .reactions { display:flex; gap:16px; font-size:14px; margin-bottom:12px; color:#555; }
    .reactions span { display:flex; align-items:center; gap:6px; }
    .reactions i { color:#f44336; }
    .buttons { display:flex; justify-content:space-between; gap:12px; margin-bottom:16px; }
    .buttons button { flex:1; padding:10px 0; border:none; border-radius:6px; font-size:14px; cursor:pointer; transition:0.2s; }
    .edit-btn { background-color:#4CAF50; color:#fff; }
    .edit-btn:hover { background-color:#45a049; }
    .delete-btn { background-color:#f44336; color:#fff; }
    .delete-btn:hover { background-color:#da190b; }
    .back-btn { background-color:#777; color:#fff; }
    .back-btn:hover { background-color:#555; }

    .comments { background:#fff; padding:12px; border-radius:8px; box-shadow:0 1px 4px rgba(0,0,0,0.1); }
    .comments h4 { margin-top:0; margin-bottom:8px; font-size:16px; color:#222; }
    .comment { border-top:1px solid #eee; padding:8px 0; font-size:14px; color:#555; }
    .comment:first-child { border-top:none; }
    @media(min-width:768px){ .buttons button{ padding:12px 0; } }
  </style>
</head>
<body>
<div class="container">
  <h2>Food Reel Details</h2>

  <!-- Video Preview -->
  <video src="<%= reel.video %>" controls autoplay muted loop></video>

  <div class="details">
    <h4>Uploaded by: <%= reel.partnerName %></h4>

    <!-- Edit Form -->
    <form id="editForm" method="POST" action="/api/fooditem/edit/<%= reel.id %>">
      <label for="name">Food Name:</label><br>
      <input type="text" id="name" name="name" value="<%= reel.name %>" style="width:100%; margin-bottom:8px;" required><br>

      <label for="description">Description:</label><br>
      <textarea id="description" name="description" style="width:100%; margin-bottom:12px;" rows="3" required><%= reel.description %></textarea><br>

      <div class="buttons">
        <button type="submit" class="edit-btn">Save Changes</button>
        <button type="button" class="back-btn" onclick="window.location.href='/api/store'">Back</button>
        <button type="button" class="delete-btn" onclick="deleteReel('<%= reel.id %>')">Delete</button>
      </div>
    </form>

    <!-- Reactions -->
    <div class="reactions">
      <span><i>‚ù§Ô∏è</i> <%= reel.likes || 0 %></span>
      <span><i>üí¨</i> <%= reel.commentsCount || 0 %></span>
      <span><i>üîñ</i> <%= reel.saves || 0 %></span>
    </div>

    <!-- Comments Section -->
    <div class="comments">
      <h4>Comments (<%= reel.commentsCount || 0 %>)</h4>
      <% if (reel.comments && reel.comments.length > 0) { %>
        <% reel.comments.forEach(comment => { %>
          <div class="comment">
            <strong><%= comment.user %>:</strong> <%= comment.text %>
          </div>
        <% }) %>
      <% } else { %>
        <p>No comments yet.</p>
      <% } %>
    </div>
  </div>
</div>

<script>
function deleteReel(id){
  if(confirm("Are you sure you want to delete this reel?")){
    fetch(`/api/delete/${id}`, {
      method: 'DELETE'
    })
    .then(res => res.json())
    .then(data => {
      if(data.success){
        alert("Deleted successfully");
        window.location.href = '/api/store';
      } else {
        alert("Error deleting");
      }
    })
    .catch(err => console.error(err));
  }
}
</script>
</body>
</html>
