<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Register</title>
    <link rel="stylesheet" href="/css/common.css">
</head>
<body>

<div class="form-wrapper">
    <h2>User Registration</h2>

    <!-- ERROR MESSAGE AREA -->
    <div id="errorBox" class="error-box"></div>

    <form id="userRegisterForm">
        <label>Name</label>
        <input type="text" name="name" placeholder="Enter your name" required>

        <label>Email</label>
        <input type="email" name="email" placeholder="Enter your email" required>

        <label>Password</label>
        <input type="password" name="password" placeholder="Enter your password" required>

        <button type="submit">Register</button>
    </form>

    <div class="link">
        <a href="/api/user/login">Already have an account? Login</a>
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("userRegisterForm");
    const errorBox = document.getElementById("errorBox");
    const submitBtn = form.querySelector("button[type='submit']");

    function sanitize(input) {
        return input.trim().replace(/[&<>"'`=\/]/g, s => "&#" + s.charCodeAt(0) + ";");
    }

    function isValidEmail(email) {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return emailRegex.test(email);
    }

    form.addEventListener("submit", async (e) => {
        e.preventDefault();

        // Clear previous error
        errorBox.style.display = "none";
        errorBox.textContent = "";

        let name = sanitize(form.name.value);
        let email = sanitize(form.email.value);
        let password = sanitize(form.password.value);

        if (!name || !email || !password) {
            errorBox.textContent = "All fields are required.";
            errorBox.style.display = "block";
            return;
        }

        if (!isValidEmail(email)) {
            errorBox.textContent = "Please enter a valid email address.";
            errorBox.style.display = "block";
            return;
        }

        if (password.length < 6) {
            errorBox.textContent = "Password must be at least 6 characters.";
            errorBox.style.display = "block";
            return;
        }

        // Disable button while request is in progress
        submitBtn.disabled = true;
        submitBtn.textContent = "Registering...";

        try {
            const response = await fetch("/api/user/register", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ name, email, password })
            });

            const result = await response.json().catch(() => ({}));

            if (!response.ok || !result.success) {
                errorBox.textContent = result.message || "Registration failed. Please try again.";
                errorBox.style.display = "block";
                return;
            }

            // Redirect on success
            window.location.href = result.redirect;

        } catch (error) {
            console.error("Registration error:", error);
            errorBox.textContent = "Network error. Please try again.";
            errorBox.style.display = "block";
        } finally {
            submitBtn.disabled = false;
            submitBtn.textContent = "Register";
        }
    });
});
</script>

</body>
</html>
