<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Food Partner Login</title>
  <link rel="stylesheet" href="/css/common.css">
</head>
<body>

<div class="form-wrapper">
  <h2>Food Partner Login</h2>

  <!-- ERROR MESSAGE AREA -->
  <% if (typeof errorMessage !== 'undefined') { %>
    <div class="error-box" style="display:block;"><%= errorMessage %></div>
  <% } %>

  <form id="foodPartnerLoginForm" method="POST" action="/api/foodpartner/login">
    <label for="email" class="sr-only">Email</label>
    <input type="email" id="email" name="email" placeholder="Email" required>

    <label for="password" class="sr-only">Password</label>
    <input type="password" id="password" name="password" placeholder="Password" required>

    <button type="submit">Login</button>
  </form>

  <div class="link">
    <span>Don't have an account? </span><a href="/api/foodpartner/signup">Register as Partner</a>
  </div>
</div>

</body>
</html>
